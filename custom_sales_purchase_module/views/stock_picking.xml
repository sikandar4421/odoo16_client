<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<!--        This part for purchase order-->
        <record id="custom_stock_picking_inherit" model="ir.ui.view">
            <field name="name">custom.stock.picking.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']/h1" position="after">
                    <h1 class="d-flex">
                        <field name="delivery_note_no" placeholder="Delivery Note No." attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                    </h1>
                </xpath>
                <xpath expr="//label[@for='scheduled_date']" position="before">
                    <field name="date_of_delivery" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
            </field>
        </record>

        <record id="custom_vpicktree_inherit" model="ir.ui.view">
            <field name="name">custom.vpicktree.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="delivery_note_no"/>
                </field>
                <field name="scheduled_date" position="before">
                    <field name="date_of_delivery"/>
                </field>

            </field>
        </record>

         <record id="custom_picking_search_inherit" model="ir.ui.view">
            <field name="name">custom.picking.search.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="delivery_note_no"/>
                    <filter string="Delivery Note No." name="delivery_note_no"/>
                    <filter string="Date of Delivery" name="date_of_delivery" date="date_of_delivery"/>
                </xpath>
                 <xpath expr="//search/group" position="inside">
                    <filter string="Delivery Note No." name="delivery_note_no" domain="[]" context="{'group_by': 'delivery_note_no'}"/>
                    <filter string="Date of Delivery" name="date_of_delivery" domain="[]" context="{'group_by': 'date_of_delivery'}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>