<odoo>
    <template id="sale_order_report.wizard_report_sale_pdf">
        <t t-call="web.basic_layout">
<!--                <t t-foreach="docs" t-as="o">-->
                    <div class="header" style="margin-bottom: 10px; padding-bottom: 5px;">
                        <div class="container">
                            <div class="row" style="margin-top:25px;">
                                <div class="text-center" style="font-size:24px;">
                                    <b>Logic Power Technology</b>
                                </div>
                            </div>
                            <div class="row" style="margin-top:5px;">
                                <div class="text-center" style="font-size:12px;">
                                    <b>Sales Item Wise</b>
                                </div>
                            </div>
                            <div class="row" style="margin-top:5px;">
                                <div class="text-center" style="font-size:12px;">
                                    <b><span t-esc="project_name"/> </b>
                                </div>
                            </div>
                            <div class="row" style="margin-top:5px;">
                                <div class="text-left" style="font-size:12px;">
                                    <b>Customer Name:<span t-esc="customer_name"/> </b>
                                </div>
                            </div>

                        </div>

                    </div>
<!--                    <div class="page">-->
                        <table style=" width: 100%;">
                            <thead>
                                <tr style="background-color:#00cc00;font-size:12px;text-align:center;">
                                    <th style="text-align:center;">Inv Date</th>
                                    <th style="text-align:left;padding-left:10px;">Inv No</th>
<!--                                    <th>Party</th>-->
                                    <th style="text-align:left;padding-left:10px;">Item Name</th>
                                    <th style="text-align:right;padding-right:10px;">Qty</th>
                                    <th style="text-align:left;padding-left:10px;">Unit</th>
                                    <th style="text-align:right;padding-right:10px;">Rate</th>
                                    <th style="text-align:right;padding-right:10px;">Net Amount</th>
                                </tr>
                            </thead>
                            <tbody class="consumed_tbody">
                                 <t t-set="m" t-value="0"/>
                                <t t-foreach="sale_orders" t-as="order">
                                    <t t-foreach="order.order_line" t-as="line">
                                <tr style="font-size:10px;">
                                    <td style="text-align:center;">
                                        <span t-esc="order.manual_create_date.strftime('%d-%B -%Y')"/>
                                    </td>
                                    <td style="text-align:left;padding-left:10px;"> <span t-esc="order.name"/> </td>
<!--                                    <td style="text-align:center;"> <span t-esc="order.project_id.name"/> </td>-->
                                    <td style="text-align:left;padding:left:10px;"> <span t-esc="line.name"/> </td>
                                    <td style="text-align:right;padding-right:10px;"> <span t-esc="line.product_uom_qty"/> </td>
                                    <td style="text-align:left;padding-left:10px;"> <span t-esc="line.product_uom.name"/> </td>
                                    <td style="text-align:right;padding-right:10px;"> <span t-esc="line.price_unit" t-options='{"widget": "float", "precision": 4}'/> </td>

                                    <td style="text-align:right;padding-right:10px;"><span t-esc="line.product_uom_qty * line.price_unit" t-options='{"widget": "float", "precision": 4}'/> </td>


                                </tr>
                                    </t>
                                    <t t-set="m" t-value="m+1"/>
                                                                </t>

                                <tr style="background-color:#00cc00;font-size:12px;">
                                    <td style="padding-left:10px;" colspan="4">
                                       Total
                                    </td>

                                    <td >

                                    </td>
                                    <td >
<!--                                      <span t-esc="total_price" t-options='{"widget": "float", "precision": 2}'/>-->
                                    </td>
                                    <td style="text-align:right;padding-right:10px;"> <span t-esc="sub_total" t-options='{"widget": "float", "precision": 4}'/>&#160;<span t-esc="currency"/></td>


                                </tr>


                                <!--                                </t>-->
                                <!--                                </t>-->
                            </tbody>

                        </table>






