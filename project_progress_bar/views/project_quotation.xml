<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Form View Subtask-->
 <record model="ir.ui.view" id="project_quotation_form_view">
        <field name="name">Project.Quotation</field>
        <field name="model">project.quotation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group >
                            <field name="name" />
                            <field name="subject" />
                            <field name="attention" />

                        </group>
                        <group >
                            <field name="date"/>
                            <field name="ref"/>
                        </group>
                        <button name="get_items" style="color:green;" class="btn btn-link" type="object" string="Add Items"/>
                    </group>
                    <notebook>
                        <page name="line_items" string="Items Details">
                            <field name="quotation_line" widget="section_and_note_one2many" mode="tree">
                                <tree editable="bottom">
                                    <field name="display_type" invisible="1"/>
                                     <control>
                                    <create name="add_product_control" string="Add a product"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                </control>
<!--                                    <field name="sequence" widget="handle"/>-->
                                    <field name="name" widget="section_and_note_text"/>
                                    <field name="unit"/>
                                    <field name="qty"/>
                                    <field name="rate"/>
                                    <field name="currency_id"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                                <field colspan="2" name="note" nolabel="1" placeholder="Terms and conditions..."/>
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="total"  nolabel="0" colspan="2" readonly="1"/>
                            </group>
                            <div class="clearfix"/>
                        </group>
                        </page>
                    </notebook>

                </sheet>
<!--                 <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->

            </form>
        </field>
    </record>


    <!--Tree view For SubTask-->
    <record id="project_quotation_tree" model="ir.ui.view">
        <field name="name">project.quotation</field>
        <field name="model">project.quotation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="ref" />
            </tree>
        </field>
    </record>





    <!--quotation template item-->
     <record model="ir.ui.view" id="project_quotation1_form_view">
        <field name="name">quotation.form.view</field>
        <field name="model">project.quotation.setup</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group >
                            <field name="name" />
                            <field name="qty"/>
                            <field name="unit"/>
                        </group>
                        <group >
                            <field name="rate"/>
                        </group>
                    </group>

                </sheet>

            </form>
        </field>
    </record>


    <!--Tree view For SubTask-->
    <record id="project_quotation1_tree" model="ir.ui.view">
        <field name="name">project.quotation.setup.tree</field>
        <field name="model">project.quotation.setup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="qty" />
                <field name="rate"/>
            </tree>
        </field>
    </record>
    <!--add action foe menu-->
    <record id="project_quotation_action" model="ir.actions.act_window">
        <field name="name">Quotation Items</field>
        <field name="res_model">project.quotation.setup</field>
        <field name="view_mode">tree,form</field>

    </record>


    <!-- add menu -->
    <menuitem
        id="project_quotation_item_menu"
        name="Add Quotation Item"
        action="project_quotation_action"
        parent="project.menu_project_config"
    />

    <!--end-->
    <!--add action foe menu-->
    <record id="project_Quotation_action" model="ir.actions.act_window">
        <field name="name">Quotation</field>
        <field name="res_model">project.quotation</field>
        <field name="view_mode">tree,form</field>

    </record>

    <menuitem
        id="project_quotation_menu"
        name="Project Quotation"
        action="project_Quotation_action"
        parent="project.menu_main_pm"
    />



</odoo>