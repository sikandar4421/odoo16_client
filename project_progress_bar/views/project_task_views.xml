<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--        Adding Progress Bar in Task Kanban view-->
    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">
            project.task.view.kanban.inherit.project.progress.bar
        </field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position='after'>
                <field name="stage_is_progress" invisible="1"/>
                <field name="percentage_each_stage" class="d-flex align-items-center ps-0 ps-lg-5"
                       widget="progressbar" invisible="1"/>
                <field name="completed_sub_task" class="d-flex align-items-center ps-0 ps-lg-5"
                       widget="progressbar" options="{ 'max_value': 'percentage_each_stage', 'editable': false}"/>
<!--                <field name="progress_bar"-->
<!--                       class="d-flex align-items-center ps-0 ps-lg-5"-->
<!--                       widget="progressbar" attrs="{'invisible': [('stage_is_progress', '=', False)]}"/>-->
            </xpath>
        </field>
    </record>
    <!--        Adding Progress Bar in Task Tree view-->
    <record id="view_task_tree2" model="ir.ui.view">
        <field name="name">project.task.view.tree.inherit.project.progress.bar
        </field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position='after'>
                <field name="stage_is_progress" invisible="1"/>
                <field name="percentage_each_stage"/>
<!--                <field name="percentage_each_stage" class="d-flex align-items-center ps-0 ps-lg-5"-->
<!--                       widget="progressbar"/> -->
                <field name="completed_sub_task" class="d-flex align-items-center ps-0 ps-lg-5"
                       widget="progressbar" options="{ 'max_value': 'percentage_each_stage', 'editable': false}"/>
            </xpath>
        </field>
    </record>
    <!--        Adding Progress Bar in Task Form view-->
    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project.task.view.form.inherit.project.progress.bar
        </field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position='after'>

                <field name="stage_is_progress" invisible="1"/>
                <field name="progress_bar" invisible="1"/>
                 <field name="percentage_each_stage" class="d-flex align-items-center ps-0 ps-lg-5"
                       widget="progressbar" options="{ 'max_value': 'progress_bar', 'editable': false}" />
<!--                <field name="completed_no_each_stage" class="d-flex align-items-center ps-0 ps-lg-5"-->
<!--                       widget="progressbar"/>-->
                <field name="amt_per_each_stage"/>
                <field name="amt_single"/>
                <field name="amt_single_subtask"/>
                <field name="completed_sub_task" class="d-flex align-items-center ps-0 ps-lg-5"
                       widget="progressbar" options="{ 'max_value': 'percentage_each_stage', 'editable': false}"/>



            </xpath>
            <xpath expr="//field[@name='task_properties']" position="after">
                <field name="hide_btn_subtask" invisible="1"/>
                <button name="get_subtask" style="color:green;" class="btn btn-link" type="object" string="Get SubTask" attrs="{'invisible': ['|',('parent_id', '!=', False),('hide_btn_subtask', '!=', False)]}"/>
            </xpath>
            <xpath expr="//page[@name='sub_tasks_page']/field[@name='child_ids']/tree/field[@name='stage_id']" position="after">
                <field name="complete_work" widget="progressbar" options="{'editable': True}"/>

            </xpath>

        </field>
    </record>
</odoo>
