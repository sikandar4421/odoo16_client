<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.inherit.form.section.wise.subtotal</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add new attributes for enabling the subtotal field in section-->
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="section_wise_subtotal">price_subtotal</attribute>
            </xpath>
        </field>
    </record>


    <record id ="purchase_quotation_form_inher" model="ir.ui.view">
        <field name ="name">purchase.quotation.form.inher</field>
        <field name="model">project.quotation</field>
        <field name="inherit_id" ref="project_progress_bar.project_quotation_form_view"/>
        <field name="arch" type="xml">
        <!-- Add new attributes for enabling the subtotal field in section-->
            <xpath expr="//field[@name='quotation_line']/tree" position="attributes">
                <attribute name="section_wise_subtotal">price_subtotal</attribute>
            </xpath>
        </field>
    </record>
</odoo>
